<%
  @title = "#{@user.username}'s boards"
  @no_container = true
  @body_class = 'list-index'
%>

<div class="user-profile-heading">
  <div class="uph-cover" style="background-image: url(<%= @user.cover :cover %>)"></div>
  <div class="container">
    <div class="uph-info">
      <div class="uph-avatar">
        <img src="<%= @user.avatar :medium %>" alt="">
      </div>
      <h2 class="uph-username">
        <%= @user.full_name.blank? ? @user.username : @user.full_name %>
      </h2>
      <div class="uph-infoline">
        <%= @user.about %>
      </div>
      <% if not @user.location.blank? %>
        <div class="uph-infoline">
          <i class="fa fa-map-marker"></i> <%= @user.location %>
        </div>
      <% end %>
      <% if not @user.website.blank? %>
        <div class="uph-infoline">
          <i class="fa fa-globe"></i> <a href="<%= @user.website %>"><%= @user.website %></a>
        </div>
      <% end %>
      <div class="uph-infoline">
        <i class="fa fa-clock-o"></i> contributor since <%= @user.created_at.to_s(:month_and_year) %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-7">

      <div class="panel panel-primary no-border no-border-radius">
        <div class="panel-heading">
          <h4>Top Tags</h4>
        </div>
        <div class="panel-body">
          <p class="text-gray">Top tags are based on <%= @user.first_name_or_username %>`s lists, comments, and pins.</p>
          <a href="#" class="label label-tag"><span class="tag-wrap"><span class="tag-name">neuroscience</span> <span class="tag-count">32</span></span></a>
          <a href="#" class="label label-tag"><span class="tag-wrap"><span class="tag-name">caffeine</span> <span class="tag-count">27</span></span></a>
          <a href="#" class="label label-tag"><span class="tag-wrap"><span class="tag-name">cardiovascular disease</span> <span class="tag-count">27</span></span></a>
          <a href="#" class="label label-tag"><span class="tag-wrap"><span class="tag-name">excersice</span> <span class="tag-count">27</span></span></a>
          <a href="#" class="label label-tag"><span class="tag-wrap"><span class="tag-name">neuroendocrinology</span> <span class="tag-count">27</span></span></a>
          <a href="#" class="label label-tag"><span class="tag-wrap"><span class="tag-name">running</span> <span class="tag-count">27</span></span></a>
        </div>
      </div>

      <div class="panel panel-primary no-border no-border-radius">
        <div class="panel-heading">
          <h4><%= @visible_lists.to_a.count %> Lists</h4>
        </div>
        <div class="panel-body">

        </div>
      </div>

    </div>
    <div class="col-sm-1">
      &nbsp;
    </div>
    <div class="col-sm-4">

      <div class="panel panel-primary no-border no-border-radius">
        <div class="panel-heading">
          <h4>Total Reach</h4>
        </div>
        <div class="panel-body">
        </div>
      </div>

    </div>
  </div>


  <div id="search-lists">
    <div class="row">
      <div class="col-md-3">
        <%= render 'lists/search_index' %>
        <%= render 'lists/new_list_btn' %>
        <%= render 'lists/index_filters' %>
      </div>
      <div class="col-md-9">
        <h1>
          <span><%= "#{@user.username}'s" %> Boards</span>
          <small>sorted by popularity</small>
        </h1>

        <div v-for="result in showResults">
          <list-card
          :list="result"
          :signed-in="signedIn"
          >
          </list-card>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:page_app) do %>
  <%= render 'lists/list_card' %>
  <script>
    searchLists.signedIn = <%= user_signed_in? %>
    searchLists.allLists = <%= raw render('lists/lists.json', lists: @visible_lists) %>
    searchLists.$mount('#search-lists')
  </script>
<% end %>