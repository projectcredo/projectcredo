<script type="text/x-template" id="mini-bib">
  <div class="authors" v-if="r.paper.authors.length > 0">
    by
    <span v-for="(author,index) in r.paper.authors" >
      <span class="author-link" @click="filter(author.full_name)">{{author.full_name}}</span><span v-if="index+1 < r.paper.authors.length">, </span>
    </span>
    <span class="author-link text-capitalize"> Â· {{r | cite}}</span>
  </div>
  <div v-else>
    <span
      v-if="r.paper.publication != null || r.paper.published_at != null"
      class="authors author-link text-capitalize"
    >
      {{r | cite}}
    </span>
  </div>
</script>